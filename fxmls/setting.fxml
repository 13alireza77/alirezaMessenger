                <Font name="Berlin Sans FB" size="12.0" />
            </font>
        </Button>
        <Button fx:id="setPw" layoutX="138.0" layoutY="221.0" mnemonicParsing="false" onAction="#setPw" style="-fx-background-color: orange;" text="Set PW" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB" size="12.0" />
            </font>
        </Button>
        <Button fx:id="logOut" layoutX="72.0" layoutY="259.0" mnemonicParsing="false" onAction="#logOut" style="-fx-background-color: red;" text="Log Out" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB" size="12.0" />
            </font>
        </Button>
        <Button fx:id="setIm" layoutX="77.0" layoutY="95.0" mnemonicParsing="false" onAction="#setIm" style="-fx-background-color: orange;" text="Set IM" textFill="WHITE">
