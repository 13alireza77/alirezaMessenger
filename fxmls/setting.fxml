      <Label fx:id="nameLable" layoutX="7.0" layoutY="2.0" prefHeight="25.0" prefWidth="150.0" />
      <Separator layoutX="52.0" layoutY="130.0" prefWidth="100.0" style="-fx-background-color: black;" />
      <Separator layoutX="52.0" layoutY="195.0" prefWidth="100.0" style="-fx-background-color: black;" />
    </children>
