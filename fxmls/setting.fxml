<AnchorPane fx:id="settings" prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: #FCFFA4;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.settingController">
    <children>
        <ImageView fitHeight="25.0" fitWidth="49.0" layoutX="168.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../icons/settingsProfile.png" />
            </image>
        </ImageView>
        <Separator layoutX="14.0" layoutY="30.0" prefWidth="150.0" />
        <TextField fx:id="userName" layoutX="15.0" layoutY="155.0" prefWidth="100.0" style="-fx-background-color: gold;" />
        <TextField fx:id="passWord" layoutX="15.0" layoutY="220.0" prefWidth="100.0" style="-fx-background-color: gold;" />
        <ImageView fx:id="profileIm" fitHeight="47.0" fitWidth="47.0" layoutX="81.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/user.png" />
         </image></ImageView>
        <Label layoutX="74.0" layoutY="132.0" text="user name">
            <font>
                <Font name="Berlin Sans FB" size="12.0" />
            </font>
        </Label>
        <Label layoutX="78.0" layoutY="197.0" text="password">
            <font>
                <Font name="Berlin Sans FB" size="12.0" />
            </font>
        </Label>
        <Button fx:id="setUn" layoutX="137.0" layoutY="155.0" mnemonicParsing="false" onAction="#setUn" style="-fx-background-color: orange;" text="Set UN" textFill="WHITE">
